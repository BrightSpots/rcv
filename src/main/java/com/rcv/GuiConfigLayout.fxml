<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity"
  minHeight="-Infinity"
  minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0"
  xmlns="http://javafx.com/javafx/8.0.121" fx:controller="com.rcv.GuiConfigController">
  <right>
    <TextArea BorderPane.alignment="TOP_LEFT" editable="false" minWidth="300.0" prefWidth="300.0"
      wrapText="true" fx:id="textAreaHelp"/>
  </right>
  <center>
    <VBox BorderPane.alignment="CENTER">
      <TabPane minHeight="450.0" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Contest">
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <Label layoutX="22.0" layoutY="14.0" text="Contest Name *"/>
            <TextField id="textContestName" layoutX="22.0" layoutY="32.0" promptText="Contest Name"
              fx:id="textContestName"/>
            <Label layoutX="22.0" layoutY="57.0" text="Output Directory *"/>
            <HBox alignment="CENTER_LEFT" layoutX="18.0" layoutY="74.0" spacing="4.0">
              <padding>
                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
              </padding>
              <TextField id="textOutputDirectory" promptText="Output Directory"
                fx:id="textOutputDirectory"/>
              <Button mnemonicParsing="false" onAction="#buttonOutputDirectoryClicked"
                text="Select"/>
            </HBox>
            <Label layoutX="22.0" layoutY="107.0" text="Tabulate by Precinct"/>
            <HBox alignment="CENTER_LEFT" layoutX="22.0" layoutY="124.0" spacing="12.0">
              <padding>
                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
              </padding>
              <RadioButton mnemonicParsing="false" text="True">
                <toggleGroup>
                  <ToggleGroup fx:id="toggleTabulateByPrecinct"/>
                </toggleGroup>
              </RadioButton>
              <RadioButton layoutX="10.0" layoutY="10.0" mnemonicParsing="false" selected="true"
                text="False" toggleGroup="$toggleTabulateByPrecinct"/>
            </HBox>
            <Label layoutX="22.0" layoutY="149.0" text="Contest Date"/>
            <HBox layoutX="18.0" layoutY="166.0" spacing="4.0">
              <padding>
                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
              </padding>
              <DatePicker editable="false" fx:id="datePickerContestDate"/>
              <Button mnemonicParsing="false" onAction="#buttonClearDatePickerContestDateClicked"
                text="Clear"/>
            </HBox>
          </AnchorPane>
        </Tab>
        <Tab text="CVR Files">
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
        </Tab>
        <Tab text="Candidates">
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
        </Tab>
        <Tab text="Rules">
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <Label layoutX="22.0" layoutY="14.0" text="Overvote Rule *"/>
            <ChoiceBox id="choiceOvervoteRule" layoutX="22.0" layoutY="32.0"
              prefWidth="150.0" fx:id="choiceOvervoteRule"/>
          </AnchorPane>
        </Tab>
      </TabPane>
      <Region/>
      <ButtonBar maxHeight="50.0" prefHeight="50.0">
        <buttons>
          <Button mnemonicParsing="false" onAction="#buttonMenuClicked" text="Back to Menu"/>
          <Button mnemonicParsing="false" onAction="#buttonSaveClicked" text="Save Config"/>
        </buttons>
        <padding>
          <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
        </padding>
      </ButtonBar>
    </VBox>
  </center>
</BorderPane>
