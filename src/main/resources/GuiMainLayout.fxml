<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity"
  minHeight="400.0"
  minWidth="400.0" prefHeight="400.0" prefWidth="600.0"
  xmlns="http://javafx.com/javafx/8.0.121" fx:controller="com.rcv.GuiMainController">
  <top>
    <Label BorderPane.alignment="CENTER" alignment="CENTER" text="Universal RCV Tabulator"
      textAlignment="CENTER">
      <font>
        <Font size="20.0"/>
      </font>
      <BorderPane.margin>
        <Insets/>
      </BorderPane.margin>
    </Label>
  </top>
  <bottom>
    <TextArea BorderPane.alignment="TOP_LEFT" editable="false" id="textStatus" prefHeight="200.0"
      prefWidth="200.0" wrapText="true" fx:id="textAreaStatus">
      <BorderPane.margin>
        <Insets/>
      </BorderPane.margin>
    </TextArea>
  </bottom>
  <center>
    <HBox BorderPane.alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <Region HBox.hgrow="ALWAYS" prefHeight="200.0" prefWidth="200.0"/>
      <VBox alignment="CENTER" spacing="12.0">
        <HBox.margin>
          <Insets/>
        </HBox.margin>
        <Button alignment="CENTER" contentDisplay="CENTER" id="buttonCreateConfig"
          maxWidth="1.7976931348623157E308" mnemonicParsing="false"
          onAction="#buttonCreateConfigClicked" text="Create Config"/>
        <Button alignment="CENTER" contentDisplay="CENTER" id="buttonModifyConfig"
          maxWidth="1.7976931348623157E308" mnemonicParsing="false"
          onAction="#buttonModifyConfigClicked" text="Modify Existing Config"/>
        <Button alignment="CENTER" contentDisplay="CENTER" id="buttonLoadConfig"
          maxWidth="1.7976931348623157E308" mnemonicParsing="false"
          onAction="#buttonLoadConfigClicked" text="Load Config"/>
        <Button alignment="CENTER" contentDisplay="CENTER" id="buttonTabulate"
          maxWidth="1.7976931348623157E308" mnemonicParsing="false"
          onAction="#buttonTabulateClicked" text="Tabulate"/>
        <Region VBox.vgrow="ALWAYS" prefHeight="200.0" prefWidth="200.0"/>
      </VBox>
      <Region HBox.hgrow="ALWAYS" prefHeight="200.0" prefWidth="200.0"/>
    </HBox>
  </center>
  <padding>
    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
  </padding>
</BorderPane>
